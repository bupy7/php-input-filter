{
    "name": "bupy7/php-input-filter",
    "description": "A simple and powerful input filter for any PHP application",
    "version": "1.0.1",
    "license": "BSD-3-Clause",
    "keywoards": [
        "php",
        "form",
        "validate",
        "input",
        "filtering"
    ],
    "authors": [
        {
            "name": "Vasily Belosloodcev",
            "email": "vasily.belosloodcev@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-validator": "^2.12",
        "zendframework/zend-filter": "^2.9.1",
        "zendframework/zend-inputfilter": "^2.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27 || ^7.5.2",
        "php-coveralls/php-coveralls": "^2.1.0",
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "Bupy7\\InputFilter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bupy7\\InputFilter\\Test\\": "test/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --debug",
        "fix": "./vendor/bin/php-cs-fixer fix --config=./phpcs.php"
    }
}
