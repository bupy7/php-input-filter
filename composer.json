{
    "name": "bupy7/php-input-filter",
    "description": "A simple and powerful input filter for any PHP applications",
    "license": "BSD-3-Clause",
    "keywords": [
        "php",
        "form",
        "validate",
        "input",
        "filtering",
        "laminas",
        "zend",
        "mezzio",
        "validator"
    ],
    "authors": [
        {
            "name": "Vasily Belosloodcev",
            "email": "vasily.belosloodcev@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "laminas/laminas-validator": "^2.30.1 || ^3.0",
        "laminas/laminas-filter": "^2.31",
        "laminas/laminas-inputfilter": "^2.24.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.22",
        "friendsofphp/php-cs-fixer": "^3.65.0"
    },
    "autoload": {
        "psr-4": {
            "Bupy7\\InputFilter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bupy7\\InputFilter\\Test\\": "test/"
        }
    },
    "scripts": {
        "cs:fix": "./vendor/bin/php-cs-fixer fix --verbose",
        "test:run": "./vendor/bin/phpunit --no-coverage"
    }
}
